<br><br><br><br>
<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to "投稿する", new_topic_path, class: 'btn btn-default' %>
<% @topics.each do |topic| %>
  <div class="row">
    
          <p class="right">
        <strong>作成時間:</strong>
        <%= topic.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
        <p><%= topic.content %></p>
        <%= link_to topic_path(topic) do %>
          <h4><strong><%= image_tag topic.image %></strong></h4>
        <% end %>

      <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-primary btn-success' %>
      <%= link_to "削除", topic_path(topic.id), method: :delete, class:'btn btn-primary btn-success' %>
    </div>
    <% end %>
  </div>

</div>

      
      


