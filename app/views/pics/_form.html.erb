<%= form_for(@pic) do |f| %>
<% if @pic.errors.any? %>
<div id="error_expanation">
    <h3><%= @pic.errors.count %>件のエラーがあります</h3>

    <ul>
        <% @pic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>


<%= f.label :写真 %>
<%= f.file_field :image, class: 'center-block' %>
<br>

<%= f.label :ひとこと %>
<%= f.text_field :content, class: 'form-control'%>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-success' %>
<% end %>
